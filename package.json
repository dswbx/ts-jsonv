{
   "name": "jsonv-ts",
   "main": "dist/lib/index.js",
   "module": "dist/lib/index.js",
   "types": "dist/lib/index.d.ts",
   "version": "0.1.0",
   "sideEffects": false,
   "description": "A simple, lightweight and dependency-free TypeScript library for defining and validating JSON schemas with static type inference. Includes Hono middleware for validation, OpenAPI generation, and MCP server implementation.",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/dswbx/jsonv-ts.git"
   },
   "publishConfig": {
      "access": "public"
   },
   "type": "module",
   "license": "MIT",
   "scripts": {
      "test:unit": "bun test --bail",
      "types": "tsc --noEmit",
      "test": "bun types && bun test:unit && bun test:spec",
      "test:spec": "clear && bun run src/test/spec/run.ts",
      "build": "tsup",
      "benchmark": "bun run src/test/validation/benchmark.ts",
      "fetch": "npx giget gh:json-schema-org/JSON-Schema-Test-Suite/tests src/test/spec/lib",
      "prepublishOnly": "bun run build",
      "release:patch": "bun run test && npm version patch && git push && git push --tags && npm publish",
      "release:minor": "bun run test && npm version minor && git push && git push --tags && npm publish",
      "release:major": "bun run test && npm version major && git push && git push --tags && npm publish"
   },
   "devDependencies": {
      "@cfworker/json-schema": "^4.1.1",
      "@types/bun": "latest",
      "ajv": "^8.17.1",
      "bun-types": "^1.2.9",
      "expect-type": "^1.2.1",
      "hono": "^4.7.9",
      "json-schema-library": "^10.0.0",
      "mitata": "^1.0.34",
      "openapi-types": "^12.1.3",
      "picocolors": "^1.1.1",
      "tsup": "^8.4.0"
   },
   "peerDependencies": {
      "typescript": "^5.0.0"
   },
   "exports": {
      ".": {
         "import": "./dist/lib/index.js",
         "types": "./dist/lib/index.d.ts"
      },
      "./hono": {
         "import": "./dist/hono/index.js",
         "types": "./dist/hono/index.d.ts"
      },
      "./mcp": {
         "import": "./dist/mcp/index.js",
         "types": "./dist/mcp/index.d.ts"
      }
   },
   "typesVersions": {
      "*": {
         "hono": [
            "./dist/hono/index.d.ts"
         ],
         "mcp": [
            "./dist/mcp/index.d.ts"
         ]
      }
   },
   "tsup": {
      "entry": [
         "src/lib/index.ts",
         "src/hono/index.ts",
         "src/mcp/index.ts"
      ],
      "external": [
         "hono",
         "jsonv-ts"
      ],
      "format": "esm",
      "platform": "neutral",
      "dts": true,
      "metafile": true,
      "minify": true,
      "clean": true,
      "outDir": "dist"
   },
   "files": [
      "dist",
      "README.md",
      "!dist/metafile*"
   ],
   "keywords": [
      "json",
      "schema",
      "validator",
      "validate",
      "jsonschema",
      "json-schema",
      "hono",
      "openapi",
      "swagger",
      "typescript"
   ]
}
